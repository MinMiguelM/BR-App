<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.logicware.brapp.activities.EventoUsuarioActivity"
    android:background="@drawable/ciudad">



    <RelativeLayout tools:context="com.logicware.brapp.activities.ModifyEstablishmentActivity"
        tools:showIn="@layout/activity_modify_establishment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextFechaInicio"
            android:layout_below="@+id/textViewFechaInicio"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextFechaFin"
            android:layout_below="@+id/textViewFechaFin"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha de inicio"
            android:id="@+id/textViewFechaInicio"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha de fin"
            android:id="@+id/textViewFechaFin"
            android:layout_below="@+id/editTextFechaInicio"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Titulo (Nombre evento)"
            android:id="@+id/textViewTitulo"
            android:layout_below="@+id/editTextFechaFin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTitulo"
            android:layout_below="@+id/textViewTitulo"
            android:layout_alignRight="@+id/editTextFechaFin"
            android:layout_alignEnd="@+id/editTextFechaFin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DescripciÃ³n"
            android:id="@+id/textViewDescripcion"
            android:layout_below="@+id/editTextTitulo"
            android:layout_alignRight="@+id/textViewFechaFin"
            android:layout_alignEnd="@+id/textViewFechaFin" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDescripcion"
            android:layout_below="@+id/textViewDescripcion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realizar Evento"
            android:id="@+id/buttonE"
            android:layout_below="@+id/editTextDescripcion"
            android:layout_toRightOf="@+id/textViewFechaFin"
            android:layout_toEndOf="@+id/textViewFechaFin" />
    </RelativeLayout>

</RelativeLayout>