<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.logicware.brapp.activities.OneEstablishmentUsuarioActivity"
    android:background="@drawable/ciudad">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="160dp"
                android:id="@+id/imageView3"
                android:foreground="@drawable/bar"
                android:background="@drawable/bar" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewNomEsta"
        android:layout_below="@+id/scrollView2"
        android:layout_alignLeft="@+id/textViewDirec"
        android:layout_alignStart="@+id/textViewDirec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewDirec"
        android:layout_below="@+id/textViewNomEsta"
        android:layout_alignLeft="@+id/textViewHorario"
        android:layout_alignStart="@+id/textViewHorario" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewHorario"
        android:layout_below="@+id/textViewDirec"
        android:layout_alignLeft="@+id/textViewTelefono"
        android:layout_alignStart="@+id/textViewTelefono" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewTelefono"
        android:layout_below="@+id/textViewHorario"
        android:layout_alignLeft="@+id/textViewTematica"
        android:layout_alignStart="@+id/textViewTematica" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewTematica"
        android:layout_below="@+id/textViewTelefono"
        android:layout_alignLeft="@+id/buttonReservas"
        android:layout_alignStart="@+id/buttonReservas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservas"
        android:id="@+id/buttonReservas"
        android:layout_alignTop="@+id/buttonComentarios"
        android:layout_alignRight="@+id/buttonConsultarEvento"
        android:layout_alignEnd="@+id/buttonConsultarEvento" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comentarios"
        android:id="@+id/buttonComentarios"
        android:layout_below="@+id/textViewTematica"
        android:layout_toRightOf="@+id/buttonReservas"
        android:layout_toEndOf="@+id/buttonReservas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConsultarEventos"
        android:id="@+id/buttonConsultarEvento"
        android:layout_below="@+id/buttonReservas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizar Evento"
        android:id="@+id/buttonRealizarEvento"
        android:layout_below="@+id/buttonComentarios"
        android:layout_alignLeft="@+id/buttonComentarios"
        android:layout_alignStart="@+id/buttonComentarios" />

</RelativeLayout>